<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>


<div class="jumbotron bg-light p-5 rounded-lg m-3 container-fluid jum">
    <div class="row">
        <div class="offset-md-3 col=md-6"></div>
        <h1><%= title %></h1>
        <form class="form"  method="POST">
        <div class="form-group">
            <label for="nameTextField">Display Name</label>
            <input type="text" class="form-control"
            id="nameTextField" placeholder="Enter the Survey's name" 
            name="name"
            value="<%= survey.name%>" required>

            <div class="form-group">
                <label for="q1TextField">Question 1:</label>
                <input type="text" class="form-control"
                id="q1TextField" placeholder="Enter Question 1" 
                name="q1" 
                value="<%= survey.q1%>"required>
            </div>

            <div class="form-group">
                <label for="q2TextField">Question 2:</label>
                <input type="text" class="form-control"
                id="q2TextField" placeholder="Enter Question 2" 
                name="q2" 
                value="<%= survey.q2%>"required>
            </div>

            <div class="form-group">
                <label for="q3TextField">Question 3:</label>
                <input type="text" class="form-control"
                id="q3TextField" placeholder="Enter Question 3" 
                name="q3" 
                value="<%= survey.q3%>"required>
            </div>
            
        </div>

        <button class="btn btn-primary" type="submit"><i class="fas fa-edit"></i>Submit</button>
        <a href="/survey-list" class="btn btn-warning"><i class="fas fa-undo"></i> Cancel</a>
    </div>
</div>
    </form>
    

<%- include ../Partials/bottom_nav.ejs%>  

